def prime_factorization(n):
    factors = []
    # 2で割り切れるだけ割る
    while n % 2 == 0:
        factors.append(2)
        n = n // 2
    
    # 奇数の素因数を探索
    for i in range(3, int(n**0.5) + 1, 2):
        while n % i == 0:
            factors.append(i)
            n = n // i
    
    # nが素数の場合
    if n > 2:
        factors.append(n)
    
    return factors

# ユーザーからの入力を受け取る
num = int(input("素因数分解したい数を入力: "))

# 素因数分解を実行
result = prime_factorization(num)

# 結果を表示
print(f"{num} の素因数分解結果: {result}")

